{
  "name": "dockerfile-diff",
  "version": "0.8.0",
  "description": "A tool to compare dockerfiles automatically generated by hermit with their original human-made counterparts",
  "main": "src/index.ts",
  "bin": {
    "dockerfile-diff": "dist/bin/cli.js"
  },
  "scripts": {
    "start": "ts-node src/bin/cli.ts",
    "build": "tsc",
    "install-dockerfile-diff": "npm run build && npm run setup-dockerfile-diff",
    "setup-dockerfile-diff": "sed -i '1i#!/usr/bin/env node' dist/bin/cli.js && chmod +x dist/bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Raidenkyu/dockerfile-diff.git"
  },
  "keywords": [
    "Docker",
    "Containers",
    "Automation",
    "Comparison"
  ],
  "author": "Jo√£o Carlos Maduro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Raidenkyu/dockerfile-diffFEUP-DISS/issues"
  },
  "homepage": "https://github.com/Raidenkyu/dockerfile-diff#readme",
  "devDependencies": {
    "@types/dockerode": "^3.2.3",
    "@types/markdown-pdf": "^9.0.0",
    "@types/node-persist": "^3.1.1",
    "@types/string-similarity": "^4.0.0",
    "@types/tar-fs": "^2.0.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "csv-writer": "^1.6.0",
    "dockerode": "^3.2.1",
    "markdown-pdf": "^10.0.0",
    "node-persist": "^3.1.0",
    "string-similarity": "^4.0.4",
    "tar-fs": "^2.1.1",
    "ts-node": "^9.1.1"
  }
}
